{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",       // ✅ Enable JSX support
    "module": "esnext",        // ✅ Fix module resolution
    "allowImportingTsExtensions": true, // ✅ Allow .ts/.tsx imports
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}